<div class="container">
  <nav class="navbar navbar-light bg-transparent">
    <%= link_to "Musika", root_path, class: "navbar-brand nav-logo" %>
  </nav>
</div>

<div class="container-fluid h-100">
  <div class="text-center text-white">
   <h1 class="display-4"> Forgot your password? </h1>
  </div>
  <div class="row justify-content-center align-items-center h-200">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <form action="">
          <div class=" form-group">
            <%= f.email_field :email, autofocus: true, :class => "form-control form-control-lg", :placeholder => "Email" %>
          </div>
          <button class="btn btn-primary btn-lg btn-block" type="submit" name="action">Send me reset password instructions</button>
        </form>
      <% end %>
    </div>
  </div>
</div>
