<div class="login-wrapper">
  <div class="container">
    <nav class="navbar navbar-light bg-transparent">
      <%= link_to "Musika", root_path, class: "navbar-brand nav-logo" %>
    </nav>
  </div>
  <div class="container-fluid h-100">
    <div class="text-center text-white">
     <h1 class="display-4"> Welcome Back! </h1>
    </div>
    <div class="row justify-content-center align-items-center h-50">
      <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
       
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render 'layouts/message' %>

          <form action="">
            <div class=" form-group">
              <%= f.email_field :email, autofocus: true, :class => "form-control form-control-lg validate", :placeholder => "Email" %>
            </div>

            <div class="form-group text-white">
              <%= f.password_field :password, :class => "form-control form-control-lg validate", :placeholder => "Password" %>
            </div>
            
            <p><%= link_to "Forgot your password?", new_password_path('user'), :class => "login-link" %></p>

            <button class="btn btn-primary btn-lg btn-block" type="submit" name="action">LOGIN</button>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
